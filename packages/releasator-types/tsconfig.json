{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "jsx": "react",
        "module": "es2022",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        ".eslintrc.js",
        "./src/**/*"
    ]
}
