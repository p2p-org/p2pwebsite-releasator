{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "jsx": "react",
        "module": "es2022",
        "moduleResolution": "node",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "transpileOnly": false,
    "include": [
        ".eslintrc.js",
        "./src/**/*"
    ]
}
